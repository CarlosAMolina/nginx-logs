if [ $# -eq 0 ]; then
  echo "No arguments supplied"
  exit 1
elif [ $1 == "python" ]; then
  echo "Init python"
  PROCESS_NAME=python
  RESULTS_FILE=results-python.txt
elif [ $1 == "rust" ]; then
  echo "Init rust"
  PROCESS_NAME=nginx_logs
  RESULTS_FILE=results-rust.txt
else
  exit 1
fi

echo > $RESULTS_FILE
while :
do
  ps -p $(pgrep $PROCESS_NAME) -o %cpu,%mem,cmd,etime >> $RESULTS_FILE
done
